﻿@model ReplyViewModel

@{
    ViewBag.Title = "Reply to message";
}

<h1>Write your message!</h1>

<form asp-controller="Messages" asp-action="ReplyToMessage" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="MessageID" type="hidden" />


    <label asp-for="MessageReply.Body"></label>
    <input asp-for="MessageReply.Body" />

    <button type="submit">Post</button>
</form>
